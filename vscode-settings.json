{
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#3c096d",
    "activityBar.activeBorder": "#f4e3e6",
    "activityBar.background": "#222222",
    "activityBar.foreground": "#fff",
    "activityBar.inactiveForeground": "#f2f2f2",
    "activityBarBadge.background": "#fc6500",
    "activityBarBadge.foreground": "#000"
  },
  "[javascript][vue][json]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[php]": {
    "editor.defaultFormatter": "wongjn.php-sniffer",
    "editor.formatOnSave": true
  },
  "[scss]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.stylelint": true
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "css.validate": false,
  "eslint.lintTask.enable": true,
  "eslint.nodePath": "themes/base/.yarn/sdks",
  "eslint.packageManager": "yarn",
  "javascript.format.enable": false,
  "json.format.enable": false,
  "less.validate": false,
  "namespaceResolver.showMessageOnStatusBar": true,
  "namespaceResolver.sortAlphabetically": true,
  "php-docblocker.useShortNames": true,
  "php.suggest.basic": false,
  "php.validate.enable": false,
  "phpSniffer.autoDetect": true,
  "phpSniffer.run": "onType",
  "prettier.prettierPath": "themes/base/.yarn/sdks/prettier/index.js",
  "scss.validate": false,
  "search.exclude": {
    "**/.pnp.*": true,
    "**/.yarn": true
  },
  "stylelint.configBasedir": "themes/base/",
  "stylelint.enable": true,
  "stylelint.packageManager": "yarn",
  "stylelint.snippet": ["css", "scss", "less", "postcss"],
  "stylelint.validate": ["css", "scss", "less", "postcss"],
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.tsdk": "themes/base/.yarn/sdks/typescript/lib"
}
